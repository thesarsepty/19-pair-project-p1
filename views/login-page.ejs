    <div style="height: 24px;"></div>
    <h1>Login Page</h1>
        <br>
        <form action="/login" method="POST">
        <div class="form-login">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control email-login-text" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
        </div>
        <br>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control password-login-text" id="exampleInputPassword1" placeholder="Password" name="password">
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Login</button><br>
        <a href="/"><button type="button" class="btn btn-primary">Back To Home</button></a><br>
        <p>Belum punya akun? <a href="/register">Daftar yuk</a></p>
    </div>
    </form>
